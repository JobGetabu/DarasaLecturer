<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Text input style-->
    <style name="TextLabel" parent="">
        <!-- parent="TextAppearance.AppCompat"-->
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--Toolbar Text input style-->
    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#232323</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="ChipTextStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#232323</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="ScanningButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/scan_class</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

  <!--  activity themes-->
    <style name="TransparentBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.TransparentTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="MyProgressBarTwo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#DEABFA</item>
        <item name="colorControlActivated">#DEABFA</item>
        <item name="colorControlHighlight">#B1AAF8</item>
        <item name="android:progressDrawable">@drawable/progressbar_background</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <!--Chat styles for sending messages-->
    <style name="Chat" />

    <style name="Chat.NewMessage" />

    <style name="Chat.NewMessage.Layout">
        <item name="android:background">@drawable/oval_shape_white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Chat.NewMessage.Text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/chat_new_message_text_size</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>
